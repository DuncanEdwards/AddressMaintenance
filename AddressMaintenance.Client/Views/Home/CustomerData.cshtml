@{
    Layout = null;
}

@model AddressMaintenance.Model.CustomerPagedList

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th scope="col">First Name <a href="#"><span class="fa fa-sort-down"></span></a></th>
            <th scope="col">Last Name</th>
            <th scope="col">Current Address</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td><span class="badge badge-warning">No current address</span></td>
            </tr>
        }
    </tbody>
</table>

@if (Model.IsNext || Model.IsPrevious)
{

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class='page-item @(Model.IsPrevious ? "" : "disabled")'>
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
                <input class="page-link-value" type="hidden" value="@(Model.CurrentPage - 1)" />
            </a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class='page-item @((Model.CurrentPage == i) ? "active" : "")'><a class="page-link" href="#">@i<input class="page-link-value" type="hidden" value="@i" /></a></li>
        }
        <li class="page-item @(Model.IsNext ? "" : "disabled")">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
                <input class="page-link-value" type="hidden" value="@(Model.CurrentPage + 1)"/>
            </a>
        </li>
    </ul>
</nav>
}
