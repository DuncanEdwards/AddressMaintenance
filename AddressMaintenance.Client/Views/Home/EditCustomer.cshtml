<html>
<body>
    <form class="form-horizontal">
        <fieldset>

            <!-- Form Name -->
            <legend>Add Customer</legend>

            <!-- First name input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="firstname">First Name</label>
                <div class="col-md-4">
                    <input id="firstname" name="textinput" type="text" placeholder="First name" class="form-control input-md">

                </div>
            </div>

            <!-- Last name input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="lastname">Last Name</label>
                <div class="col-md-4">
                    <input id="lastname" name="textinput" type="text" placeholder="Last name" class="form-control input-md">

                </div>
            </div>

            <!-- Address line 1 input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="addressline1">Address line 1</label>
                <div class="col-md-8">
                    <input id="addressline1" name="textinput" type="text" placeholder="Address line 1" class="form-control col-md-10 input-md">
                </div>
            </div>

            <!-- Address line 2 input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="addressline2">Address line 2</label>
                <div class="col-md-8">
                    <input id="addressline2" name="textinput" type="text" placeholder="Address line 2" class="form-control col-md-10 input-md">
                </div>
            </div>

            <!-- Address line 2 input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="addressline3">Address line 3</label>
                <div class="col-md-8">
                    <input id="addressline3" name="textinput" type="text" placeholder="Address line 3" class="form-control col-md-10 input-md">
                </div>
            </div>

            <!-- Address line 2 input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="postcode">Post code</label>
                <div class="col-md-6">
                    <input id="postcode" name="textinput" type="text" placeholder="Post code" class="form-control col-md-6 input-md">
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <div class="col-md-4">
                    <button id="singlebutton" name="singlebutton" class="btn btn-primary">Commit</button>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <a href='@Url.Action("Index", "Home")'><span class="fa fa-arrow-left"></span> Back to Customers screen</a>
                </div>
            </div>

        </fieldset>
    </form>

    
</body>
</html>